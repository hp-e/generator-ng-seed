{
    "moduleBundler": "webpack",
    "uiFramework": "none",    
    "defaultStyle": "scss",
    "fileNameCasing": "kebab",
    "folderNameCasing": "kebab",
    "rootPath": "src/app",
    "selectorPrefix": "app-",
    "itemFolderStructure": "settings",
    "module": {
        "filePostfix": ".module",
        "classNamePostfix": "Module",        
        "addRouting": true,        
        "addService": true,
        "useBarrelFile": true,
        "barrelFilePostfix": ".exports"
    },
    "component": {
        "useSelectorPrefix": true,
        "filePostfix": ".component",
        "subDirectory": "components",
        "addTemplateFile": true,
        "addStyleFile": false,
        "classNamePostfix": "Component"
    },
    "model": {
        "filePostfix": ".model",
        "subDirectory": "models",
        "classNamePostfix": "Model"        
    },
    "service": {
        "filePostfix": ".service",
        "subDirectory": "services",
        "classNamePostfix": "Service"
    },
    "page": {
        "useSelectorPrefix": true,
        "filePostfix": ".page",
        "subDirectory": "pages",
        "addTemplateFile": true,
        "addStyleFile": false,
        "classNamePostfix": "Page"        
    },
    "directive": {
        "useNamePrefix": true,
        "filePostfix": ".directive",
        "subDirectory": "directives",        
        "classNamePostfix": "Directive"
    },  
    "pipe": {
        "useNamePrefix": false,
        "filePostfix": ".pipe",
        "subDirectory": "pipes",
        "classNamePostfix": "Pipe"
    },    
    "testing": {
        "platform": "jasmine",
        "filePostfix": ".spec",
        "location": "same"
    }
}